<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user_name}}!</h2>
  </div>
</div>

<div class="alert alert-warning" role="alert">
  <h4>{{blog_name}}</h4>
  <p>{{description}}</p>
  <h6>{{user.name}}</h6>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add Comment:</h3>
    <input type="hidden" value="{{id}}" />
    {{!-- //data-post-id="{{id}}" --}}
    <form class="new-comment-form">
      <div class="form-group">
        <label for="comment-name">Add Comment</label>
        <input class="form-input" type="text" id="comment-name" name="comment-name" />
      </div>
      {{!-- <div class="form-group">
        <label for="comment-desc">description:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div> --}}
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>

  {{#if comments.length}}
  <div class="col-md-6 comment-list">

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/comment/{{comment_id}}">{{comment.comment_name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/comment.js"></script>